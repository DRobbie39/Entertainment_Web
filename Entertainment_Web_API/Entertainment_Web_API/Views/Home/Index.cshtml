@using BackEnd.Models
@model List<Video>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<link href="~/css/owl.carousel.min.css" rel="stylesheet" />
<link href="~/css/stylehome.css" rel="stylesheet" />

<!-- Form tìm kiếm -->
<form class="d-none d-md-flex ms-4" method="get" action="@Url.Action("Index", "Home")">
    <input class="form-control bg-dark border-0" type="search" placeholder="Tìm kiếm video..." name="searchTerm">
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3" style="background:#000000 !important;">Danh sách video</span></h2>
    <div class="row px-xl-5">
        @foreach (var video in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="@video.ThumbnailUrl" alt="">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="@Url.Action("Video", "Home", new { id = video.VideoId })"><i class="fa fa-play-circle"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="@Url.Action("Video", "Home", new { id = video.VideoId })">@video.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    button.btn.btn-primary {
        font-weight: 700;
        border-radius: 10px;
        width: 130px;
        margin-right: 50px;
    }

    input.form-control.bg-dark.border-0 {
        font-weight: bold;
        border-radius: 20px;
        padding: 10px 60px;
        border: 1px solid #fff !important;
        margin-right: 60px;
    }
</style>

<script src="~/js/home.js"></script>
<script src="~/js/contact.js"></script>
<script src="~/js/jqbootstrapvalidation.min.js"></script>