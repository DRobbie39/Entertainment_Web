@using BackEnd.Models
@model List<Video>

@{
    ViewData["Title"] = "NoAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<link href="~/css/owl.carousel.min.css" rel="stylesheet" />
<link href="~/css/stylehome.css" rel="stylesheet" />
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3" style="background:#000000 !important;">Danh sách video</span></h2>
    <div class="row px-xl-5">
        @foreach (var video in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="@video.ThumbnailUrl" alt="">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="https://www.youtube.com/watch?v=@video.VideoId"><i class="fa fa-play-circle"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="https://www.youtube.com/watch?v=@video.VideoId">@video.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/home.js"></script>
<script src="~/js/contact.js"></script>
<script src="~/js/jqbootstrapvalidation.min.js"></script>