@using BackEnd.Models
@model List<Playlist>

@{
    ViewData["Title"] = "Library";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div style="margin-top:15px">
    <div class="col-sm-12">
        <div class="bg-secondary rounded h-100 p-4">
            <div class="row" style="background-image:linear-gradient(to bottom,#5c5858,#261515);padding:20px;border-radius:10px;">
                <div class="col-3">
                    <img class="img-fluid w-100" src="/lib/mtp.jpg" alt="" style="width:280px;height:280px;border-radius:10px;">
                </div>
                <div class="col-9" style="margin-top:30px;">
                    <h6>Playlist</h6>
                    <h2 style="font-size:56px;font-weight:700">Danh sách phát của tôi</h2>
                    <h6 style="color:#e8d9d9;">
                        chill beats, lofi vibes, new tracks every week...
                    </h6>
                    <h5 style="color:#bebebe;"><i class="fa fa-headphones" aria-hidden="true"></i> 5.255.931 lượt thích 750 bài hát, hơn 24 giờ</h5>
                    <h5 style="color:#bebebe;">Tên cá nhân</h5>
                </div>
            </div>
            <div class="d-flex flex-wrap justify-content-start">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var playlist in Model)
                    {
                        <div style="width: 12rem; border: 1px solid #ccc; border-radius: 5px; padding: 10px; margin: 5px;">
                            <a href="/Home/MusicDetail">
                                <img src="/lib/mtp.jpg" alt="..." style="width: 100%; height: auto;">
                                <h5>@playlist.PlaylistName</h5>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<style>
    .mee {
        color: #fff;
        margin-top: 10px;
        margin-left: 20px;
    }
</style>

